<%- include('../partials/header.ejs') %>

<h2>Active Flights</h2>
<table>
    <thead>
        <tr>
            <th>Airport</th>
            <th>Airline</th>
            <th>Flight No.</th>
            <th>Departure</th>
        </tr>
    </thead>
    <tbody>
       <%- flights.forEach (function(f) { %> 
        <tr>
        <tr><%= f.airport %></tr>
        <tr><%= f.airline %></tr>
        <tr><%= f.flightNo %></tr>
        <tr><%= f.departs %></tr>
      </tr>
     <% }) %> 
    </tbody>
</table>

<%- include('../partials/footer.ejs') %>